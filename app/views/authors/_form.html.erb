<%= form_for @author do |f| %>

  <%= render 'errors', object: @author %>

  <p>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </p>

  <p>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </p>

  <div>
    <%= f.label :books %>
    <%= f.collection_check_boxes(:book_ids, Book.all, :id, :title) %>
  </div>

  <%= f.submit %>

<% end %>
